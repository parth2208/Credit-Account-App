<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_personalDetails"
        android:background="@drawable/grey_border_bottom">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/fragment_display_picture"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="1dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/messi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_Contact_name"
            android:layout_below="@+id/fragment_display_picture"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_contact_number"
            android:layout_below="@id/fragment_Contact_name"
            android:layout_centerHorizontal="true"
            android:text="Mobile_No."
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relayout_credit"
        android:layout_below="@id/rel_personalDetails"
        android:background="@drawable/grey_border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_credit_details"
            android:layout_centerHorizontal="true"
            android:text="30% Credit Remaining"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relayout_add"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relayout_credit">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_addNumber"
            android:layout_marginStart="20dp"
            android:inputType="number"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addNumber"
            android:layout_toRightOf="@id/editText_addNumber"
            android:layout_marginStart="20dp"
            android:text="Add Credit"
            android:textSize="15sp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relayout_substract"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relayout_add">


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_substractNumber"
            android:layout_marginStart="20dp"
            android:inputType="number"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_substractNumber"
            android:layout_toRightOf="@id/editText_substractNumber"
            android:layout_marginStart="20dp"
            android:text="Del Credit"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relayout_history"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relayout_substract">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_history"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:text="History"
            android:textSize="20sp"
            />

    </RelativeLayout>


</RelativeLayout>